@page
@model TranTrungKienRazorPages.Pages.OrderDetails.EditModel
@{
    ViewData["Title"] = "Edit Order Details";
    Layout = "_AdminLayout";
}

<div class="h1">Edit Order Item</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderDetail.OrderId" />
            <input type="hidden" asp-for="OrderDetail.FlowerBouquetId" />
            <div class="form-group">
                <label asp-for="OrderDetail.UnitPrice" class="control-label"></label>
                <input asp-for="OrderDetail.UnitPrice" class="form-control" />
                <span asp-validation-for="OrderDetail.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetail.Quantity" class="control-label"></label>
                <input asp-for="OrderDetail.Quantity" class="form-control" />
                <span asp-validation-for="OrderDetail.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetail.Discount" class="control-label"></label>
                <input asp-for="OrderDetail.Discount" class="form-control" />
                <span asp-validation-for="OrderDetail.Discount" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-4">
                <input type="submit" value="Save" class="btn btn-primary mr-2" />
                <a asp-page="./Index" asp-route-id="@ViewData["OrderId"]" class="btn btn-secondary">Back To List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
