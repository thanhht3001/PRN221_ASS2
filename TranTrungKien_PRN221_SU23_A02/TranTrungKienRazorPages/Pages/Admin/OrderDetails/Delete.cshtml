@model TranTrungKienRazorPages.Pages.OrderDetails.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}

<div class="h1">Delete Order Item</div>

<div class="h5 mb-4">Are you sure you want to delete this order item?</div>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.OrderDetail.UnitPrice)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.OrderDetail.UnitPrice)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.OrderDetail.Quantity)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.OrderDetail.Quantity)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.OrderDetail.Discount)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.OrderDetail.Discount)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.OrderDetail.FlowerBouquet)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.OrderDetail.FlowerBouquet.FlowerBouquetName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.OrderDetail.Order)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.OrderDetail.Order.OrderId)
    </dd>
</dl>
    
<form method="post">
    <input type="hidden" asp-for="OrderDetail.OrderId" />
    <input type="hidden" asp-for="OrderDetail.FlowerBouquetId" />
    <input type="submit" value="Delete"  class="btn btn-outline-danger mr-2" />
    <a asp-page="./Index" asp-route-id="@ViewData["OrderId"]" class="btn btn-secondary">Back to List</a>
</form>

