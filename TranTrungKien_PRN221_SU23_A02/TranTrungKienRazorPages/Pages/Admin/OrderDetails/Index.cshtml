@page "/Admin/OrderDetails/{id}"
@model TranTrungKienRazorPages.Pages.OrderDetails.IndexModel
@{
    ViewData["Title"] = "Order Details";
    Layout = "_AdminLayout";
}

<div class="h1">Order Details</div>

<div class="d-flex justify-content-end mb-4">
    <a asp-page="Create" asp-route-id="@ViewData["OrderId"]" class="btn btn-warning">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Unit Price
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].Discount)
            </th>
            <th>
                Flower Bouquet
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderDetail) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlowerBouquet.FlowerBouquetName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.OrderId" asp-route-id2="@item.FlowerBouquetId" class="btn btn-primary">Edit</a>
                <a asp-page="./Delete" asp-route-id="@item.OrderId" asp-route-id2="@item.FlowerBouquetId" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-page="../Orders/Index" class="btn btn-secondary">Back to Order List</a>
</div>
