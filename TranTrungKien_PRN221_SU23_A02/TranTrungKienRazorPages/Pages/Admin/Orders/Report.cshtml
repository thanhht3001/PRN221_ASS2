@page
@model TranTrungKienRazorPages.Pages.Orders.ReportModel
@{
    ViewData["Title"] = "Order Report";
    Layout = "_AdminLayout";
}

<div class="h1 mb-1">Order Audit</div>

<div class="row mb-3">
    <div class="h5 col-md-6" style="display: inline-block; margin-top: 30px">Quantity: @Model.Number</div>
    <div class="h5 col-md-6" style="display: inline-block; margin-top: 30px; align-items:end">Total: $@Model.Total</div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <form method="post" class="row col-md-12" >
            <div class="form-group col-md-4" style="display: inline-block">
                <label class="control-label">From (dd/MM/yyyy):</label>
                <input class="form-control" asp-for="StartDate" />
            </div>
            <div class="form-group col-md-4" style="display: inline-block">
                <label class="control-label">To (dd/MM/yyyy):</label>
                <input class="form-control" asp-for="EndDate" />
            </div>
            <div class="form-group col-md-4" style="display: inline-block; margin-top: 30px">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Order Date
            </th>
            <th>
                Shipped Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Total)
            </th>
            <th>
                Status
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Customer)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Order)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CustomerName)
                </td>
            </tr>
        }
    </tbody>
</table>
