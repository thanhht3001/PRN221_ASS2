@page
@model TranTrungKienRazorPages.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Orders";
    Layout = "_AdminLayout";
}

<div class="h1">Order List</div>

<div class="d-flex justify-content-end mb-4">
    <a asp-page="Create" class="btn btn-warning">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Order Date
            </th>
            <th>
                Shipped Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Total)
            </th>
            <th>
                Status
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Order)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CustomerName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.OrderId" class="btn btn-primary">Edit</a>
                    <a asp-page="../OrderDetails/Index" asp-route-id="@item.OrderId"  class="btn btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.OrderId" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
