@page
@model TranTrungKienRazorPages.Pages.Admin.Customers.IndexModel
@{
    ViewData["Title"] = "Orders";
    Layout = "_AdminLayout";
}

<div class="h1">Customer List</div>

<form method="post" class="my-4">
    <div class="d-flex justify-content-between">
        <a asp-page="Create" class="btn btn-warning">Create New</a>
        <div class="d-flex">
            <input asp-for="SearchString" class="form-control mr-3" placeholder="Enter name"/>
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Email)
            </th>
            <th>
                Customer Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Birthday)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td style="min-width: 200px;">
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td style="min-width: 240px;">
                <a asp-page="./Edit" asp-route-id="@item.CustomerId" class="btn btn-primary">Edit</a>
                <a asp-page="./Details" asp-route-id="@item.CustomerId" class="btn btn-info">Details</a>
                <a asp-page="./Delete" asp-route-id="@item.CustomerId" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
