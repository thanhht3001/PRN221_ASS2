@page
@model TranTrungKienRazorPages.Pages.FlowerBouquets.IndexModel

@{
    ViewData["Title"] = "Flower Bouquets";
    Layout = "_AdminLayout";
}

<div class="h1">Flower Bouquet List</div>

<form method="post" class="my-4">
    <div class="d-flex justify-content-between">
        <a asp-page="Create" class="btn btn-warning">Create New</a>
        <div class="d-flex">
            <input asp-for="SearchString" class="form-control mr-3" placeholder="Enter name"/>
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlowerBouquet[0].Description)
            </th>
            <th>
                Unit Price
            </th>
            <th>
                Units In Stock
            </th>
            <th>
                Status
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlowerBouquet[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlowerBouquet[0].Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FlowerBouquet) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlowerBouquetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitsInStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlowerBouquetStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
            </td>
            <td style="min-width: 240px;">
                <a asp-page="./Edit" asp-route-id="@item.FlowerBouquetId" class="btn btn-primary">Edit</a>
                <a asp-page="./Details" asp-route-id="@item.FlowerBouquetId" class="btn btn-info">Details</a>
                <a asp-page="./Delete" asp-route-id="@item.FlowerBouquetId" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
