@page "/Admin/FlowerBouquet/Edit/{id}"
@model TranTrungKienRazorPages.Pages.FlowerBouquets.EditModel

@{
    ViewData["Title"] = "Edit Flower Bouquet";
    Layout = "_AdminLayout";
}

<div class="h1 mb-4">Edit Flower Bouquet</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="FlowerBouquet.FlowerBouquetId" />
            <div class="form-group">
                <label asp-for="FlowerBouquet.CategoryId" class="control-label"></label>
                <select asp-for="FlowerBouquet.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="FlowerBouquet.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlowerBouquet.SupplierId" class="control-label"></label>
                <select asp-for="FlowerBouquet.SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                <span asp-validation-for="FlowerBouquet.SupplierId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlowerBouquet.FlowerBouquetName" class="control-label"></label>
                <input asp-for="FlowerBouquet.FlowerBouquetName" class="form-control" />
                <span asp-validation-for="FlowerBouquet.FlowerBouquetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlowerBouquet.Description" class="control-label"></label>
                <input asp-for="FlowerBouquet.Description" class="form-control" />
                <span asp-validation-for="FlowerBouquet.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlowerBouquet.UnitPrice" class="control-label"></label>
                <input asp-for="FlowerBouquet.UnitPrice" class="form-control" />
                <span asp-validation-for="FlowerBouquet.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlowerBouquet.UnitsInStock" class="control-label"></label>
                <input asp-for="FlowerBouquet.UnitsInStock" class="form-control" />
                <span asp-validation-for="FlowerBouquet.UnitsInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlowerBouquet.FlowerBouquetStatus" class="control-label"></label>
                <input asp-for="FlowerBouquet.FlowerBouquetStatus" class="form-control" />
                <span asp-validation-for="FlowerBouquet.FlowerBouquetStatus" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-4">
                <input type="submit" value="Save" class="btn btn-primary mr-2" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
            <div asp-validation-summary="ModelOnly" class="h6 text-danger text-center"></div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
