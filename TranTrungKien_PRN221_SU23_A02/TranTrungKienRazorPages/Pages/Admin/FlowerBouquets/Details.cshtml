@page
@model TranTrungKienRazorPages.Pages.FlowerBouquets.DetailsModel
@{
    ViewData["Title"] = "Flower Bouquet Details";
    Layout = "_AdminLayout";
}

<div class="h1 mb-4">Flower Bouquet Details</div>

<hr />
<dl class="row">
    <dt class="col-sm-2">
        Name
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FlowerBouquet.FlowerBouquetName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.FlowerBouquet.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FlowerBouquet.Description)
    </dd>
    <dt class="col-sm-2">
        Unit Price
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FlowerBouquet.UnitPrice)
    </dd>
    <dt class="col-sm-2">
        Units In Stock
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FlowerBouquet.UnitsInStock)
    </dd>
    <dt class="col-sm-2">
        Flower Bouquet Status
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FlowerBouquet.FlowerBouquetStatus)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.FlowerBouquet.Category)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FlowerBouquet.Category.CategoryName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.FlowerBouquet.Supplier)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FlowerBouquet.Supplier.SupplierName)
    </dd>
</dl>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.FlowerBouquet.FlowerBouquetId" class="btn btn-primary mr-2">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
