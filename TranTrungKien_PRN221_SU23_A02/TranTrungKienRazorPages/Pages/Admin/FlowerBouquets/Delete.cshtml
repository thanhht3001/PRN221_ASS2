@page
@model TranTrungKienRazorPages.Pages.FlowerBouquets.DeleteModel

@{
    ViewData["Title"] = "Delete Flower Bouquet";
    Layout = "_AdminLayout";
}

<div class="h1">Delete Flower Bouquet</div>

<div class="h5 mb-4">Are you sure you want to delete this Flower Bouquet?</div>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        Name
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FlowerBouquet.FlowerBouquetName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.FlowerBouquet.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FlowerBouquet.Description)
    </dd>
    <dt class="col-sm-2">
        Unit Price
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FlowerBouquet.UnitPrice)
    </dd>
    <dt class="col-sm-2">
        Units In Stock
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FlowerBouquet.UnitsInStock)
    </dd>
    <dt class="col-sm-2">
        Status
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FlowerBouquet.FlowerBouquetStatus)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.FlowerBouquet.Category)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FlowerBouquet.Category.CategoryName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.FlowerBouquet.Supplier)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FlowerBouquet.Supplier.SupplierName)
    </dd>
</dl>
    
<form method="post">
    <input type="hidden" asp-for="FlowerBouquet.FlowerBouquetId" />
    <input type="submit" value="Delete" class="btn btn-outline-danger mr-2" />
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</form>
